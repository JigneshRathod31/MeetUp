<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="272dp"
    android:layout_height="332dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    android:layout_marginStart="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ll_root_user_item"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile_img"
            android:layout_width="144dp"
            android:layout_height="144dp"
            android:scaleType="centerCrop"
            android:src="@drawable/chat_illustration"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/primary" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Person Name"
            android:textStyle="bold"
            android:textColor="@color/text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_user_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cricket, Football, Dance, Movies" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginTop="16dp"
            android:paddingHorizontal="32dp"
            android:paddingVertical="0dp"
            android:text="Message"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:background="@drawable/rounded_primary_transparent_background" />

    </LinearLayout>

</androidx.cardview.widget.CardView>